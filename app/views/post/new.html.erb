<%= form_tag({:action=>'create'}, multipart: true) do %>
  <%= label_tag('Title') %>
  <%= text_field :post, :title %>
  <%= label_tag('Category') %>
  <%= collection_select(:post, :cate_id, @cates, :id, :name, prompt: true) %>
  <%= label_tag 'Excerpt' %>
  <%= text_field :post, :excerpt %>
  <%= label_tag 'Content' %>
  <%= text_area :post, :content %>
  <%= label_tag 'Thumbnail' %>
  <%= file_field :post, :thumb %>
  <%= submit_tag 'Add' %>
<% end %>
